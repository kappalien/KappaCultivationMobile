<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 靜態背景圖片（預設隱藏，當 OSM 關閉時顯示） -->
        <ImageView
            android:id="@+id/staticBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/background_image"
            android:visibility="gone"/>

        <!-- OSM 地圖 -->
        <org.osmdroid.views.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <!-- 顯示等級與步數 -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="#77000000"
        android:padding="8dp"
        android:text="等級: 1  |  步數: 0"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 顯示角色狀態 -->
    <TextView
        android:id="@+id/tv_pet_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="能量: 100 | 飢餓: 100 | 心情: 100 | 清潔: 100"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="#7732CD32"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <!-- 事件通知 -->
    <TextView
        android:id="@+id/tv_event_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="遭遇事件！"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="#88FF69B4"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_pet_status"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>

    <!-- 角色對話回應（對話框） -->
    <TextView
        android:id="@+id/character_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background"
        android:padding="12dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="italic"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_pet_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/character_image"
        app:layout_constraintHorizontal_bias="0.5"/>

    <!-- 左側角色圖像 -->
    <ImageView
        android:id="@+id/character_image"
        android:layout_width="260dp"
        android:layout_height="428dp"
        android:background="@android:color/transparent"
        android:src="@drawable/character"
        app:layout_constraintBottom_toTopOf="@id/button_layout"
        app:layout_constraintEnd_toStartOf="@id/character_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_status"
        app:layout_constraintVertical_bias="1.0" />

    <!-- 右側角色資訊 -->
    <TextView
        android:id="@+id/character_info"
        android:layout_width="143dp"
        android:layout_height="220dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/button_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/character_image"
        app:layout_constraintTop_toBottomOf="@id/tv_status"
        app:layout_constraintVertical_bias="0.99" />

    <!-- 底部功能鍵區 -->
    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/button_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="等級"
            android:alpha="0.5"
            android:backgroundTint="@color/button_color"/>

        <Button
            android:id="@+id/button_meditate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="修煉"
            android:alpha="0.5"
            android:backgroundTint="@color/button_color"/>

        <Button
            android:id="@+id/button_feed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="餵食"
            android:alpha="0.5"
            android:backgroundTint="@color/button_color"/>

        <Button
            android:id="@+id/button_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="娛樂"
            android:alpha="0.5"
            android:backgroundTint="@color/button_color"/>

        <Button
            android:id="@+id/button_clean"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清潔"
            android:alpha="0.5"
            android:backgroundTint="@color/button_color"/>

        <Button
            android:id="@+id/button_backpack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="背包"
            android:alpha="0.5"
            android:backgroundTint="@color/button_color"/>

        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="設定"
            android:alpha="0.5"
            android:backgroundTint="@color/button_color"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
