<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ✅ 半透明背景 -->
    <ImageView
        android:id="@+id/battleBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_battle"
        android:scaleType="centerCrop"
        android:alpha="0.5" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp">

        <ImageView
            android:id="@+id/enemyImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/enemyHpTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="敵人 HP"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="4dp" />

        <ProgressBar
            android:id="@+id/enemyHpBar"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:progress="100"
            android:max="100"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressTint="#00FF00" />

        <TextView
            android:id="@+id/playerHpTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="玩家 HP"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="4dp" />

        <ProgressBar
            android:id="@+id/playerHpBar"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:progress="100"
            android:max="100"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressTint="#00FF00" />

        <TextView
            android:id="@+id/battleLogTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="戰鬥開始"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:background="#33000000"/>

        <Button
            android:id="@+id/attackButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="普通攻擊"
            android:textSize="20sp"
            android:backgroundTint="#AA3333"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/escapeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="逃跑"
            android:textSize="18sp"
            android:backgroundTint="#444444"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</FrameLayout>