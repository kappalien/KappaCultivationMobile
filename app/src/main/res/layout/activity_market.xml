<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/market_background"
    android:padding="12dp">

    <!-- 商場主區塊（圖+台詞） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:fitsSystemWindows="true"
        android:paddingBottom="8dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/market_owner"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/shop_owner"
            android:contentDescription="商城主人"
            android:layout_marginEnd="12dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_shopkeeper_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="歡迎來到修仙百貨～"
            android:textSize="16sp"
            android:textColor="#333333"
            android:padding="4dp"
            android:background="#55c0f9d0 "
            android:elevation="2dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="6dp" />
    </LinearLayout>

    <!-- TabLayout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/marketTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66eeeeee"
        android:elevation="2dp"
        android:layout_marginBottom="6dp" />

    <!-- 商品列表頁面 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/marketViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="6dp" />

</LinearLayout>